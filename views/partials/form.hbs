<div class="container">
  <div class="row">
    <div class="col-sm-12 offset-md-2 col-md-8">
      <div class="jumbotron">
        <h2 class="text-center">Bulk Email</h2>
        <div class="row">
          <div class="col-sm-12 col-md-12">
            <form name="sendEmail" action="/" method="POST" enctype="multipart/form-data">
              <div class="formgroup">
                <div class="input-group mb-3">
                  <input type="file" placeholder="Please select a file" name="filename" class="form-control"/>
                </div>
                <div class="form-check form-check-inline mb-3">
                  <label for="saveFileOptionYes" class="">Save file</label>
                  <input type="radio" name="saveFile" value="1" id="saveFileOptionYes" class="form-check-input"/> 
                </div>
                <div class="form-check form-check-inline mb-3">
                  <label for="saveFileOptionNo" class="">Don't save file</label>
                  <input type="radio" name="saveFile" value="0" id="saveFileOptionNo" class="form-check-input" checked/> 
                </div>
                <div class="">
                  <label class="small mb-1 mt-3">From email:</label>
                  <input type="email" placeholder="From email" name="fromEmail" class="form-control" value="{{#if formData}}{{formData.email}}{{/if}}"/>
                  
                </div>
                <div class="">
                  <label class="small mb-1 mt-3">From name:</label>
                  <input type="text" placeholder="From name" name="fromName" class="form-control" value="{{#if formData}}{{formData.fromName}}{{/if}}"/>
                  
                </div>
                <div class="">
                  <label class="small mb-1 mt-3">Template ID:</label>
                  <input type="text" placeholder="Template ID" name="templateID" class="form-control" value="{{#if formData}}{{formData.templateID}}{{/if}}"/>
                  
                </div>
                <div class="">
                  <label class="small mb-1 mt-3">Subject:</label>
                  <input type="text" placeholder="Subject" name="subject" class="form-control" value="{{#if formData}}{{formData.subject}}{{/if}}"/>
                  
                </div>
                <div class="">
                  <label class="small mb-1 mt-3">Categories:</label>
                  <input type="text" placeholder="Categories" name="category" class="form-control" value="{{#if formData}}{{formData.category}}{{/if}}"/>
                  
                </div>
                <div class="mt-3 form-check form-check-inline mb-3">
                  <label for="isSeparateYes" class="">Separate senders</label>
                  <input type="radio" name="isSeparate" value="1" id="isSeparateYes" class="form-check-input"/> 
                </div>
                <div class="mt-3 form-check form-check-inline mb-3">
                  <label for="isSeparateNo" class="">One sender</label>
                  <input type="radio" name="isSeparate" value="0" id="isSeparateNo" class="form-check-input" checked/> 
                </div>
              </div>
              <button class="mt-3 btn btn-primary form-control" type="submit">Send</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="">
  {{#if errors}}
    {{#each errors as | error |}}
      {{#ifEq error.param "fromEmail"}}
        {{log error.param}} 
      {{/ifEq}}
    {{/each}}
  {{/if}}
</div>
  

